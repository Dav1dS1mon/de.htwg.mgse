#end
<html>
<title>Movie DB</title>
<link rel="stylesheet" href="./style.css">
    <body>
    <h1>Movie Database by Sascha Drobig and David Simon</h1>
    <p class="headLine">There #printHeadLine($movieDB.getMovies().size())
		#foreach( $movie in $movieDB.getMovies() )
	<table class="movieTable">
	##calculate the support staff
			 #set($support = $movie.getCastmember()-$movie.getActor()-$movie.getLeadActor())
			<tr><td>$movie.getTitle()</td>#if($movie.getOriginalTitle())<td>$!movie.getOriginalTitle()</td>#end<td>Release: $movie.getRelease()</td></tr>
			<tr><td> Number of Castmembers $movie.getCastmember()</td> <td> Actors $movie.getActor()</td><td>Lead Actors $movie.getLeadActor()</td><td>Support Staff: $support</td> </tr>
			<table class="actorTable">
			<tr>Name of the LeadActors</tr>
				#foreach( $actor in $movie.getLeadActors() )
					<tr><td>$actor</td></tr>
				#end
			</table>
			<tr><td> International Movie:#if($movie.isInternational())yes #else no #end </td><td> Duration: $movie.getDuration() h</td></tr>
			</table>
		#if($foreach.count < $movieDB.getMovies().size())
		<div class="break"> </div>
		#end
		#end
    </body>
</html>